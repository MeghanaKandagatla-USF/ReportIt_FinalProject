<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - ReportIt</title>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/ReportIt.styles.css" asp-append-version="true" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<style>
  body {
      background: linear-gradient(to bottom, #ffffff, #d4e6f1); /* White to light blue gradient background */
  }
  .navbar {
      background: linear-gradient(to right, #007bff, #0056b3); /* Blue gradient navbar */
  }
  .navbar-brand, .nav-link {
      color: #ffffff !important; /* White text for navbar links */
  }
  .navbar-brand:hover, .nav-link:hover {
      color: #d4e6f1 !important; /* Light blue hover effect */
  }
  footer {
      background: linear-gradient(to right, #007bff, #0056b3); /* Blue gradient footer */
      color: #ffffff; /* White text */
      padding: 10px 0;
  }
  footer .container {
      text-align: center;
  }
  main {
      background: linear-gradient(to bottom, #ffffff, #f0f8ff); /* White to very light blue gradient content area */
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Softer shadow */
  }
</style>
</head>
<body>
<header>
  <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
      <div class="container-fluid">
          <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ReportIt</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                  aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
              <ul class="navbar-nav flex-grow-1">
                  <li class="nav-item">
                      <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" asp-area="" asp-controller="CrimeEvents" asp-action="">Crime Events</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" asp-area="" asp-controller="AuditLogs" asp-action="">Audit Log</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" asp-area="" asp-controller="CrimeEvents" asp-action="Visualization">Visualization</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                  </li>
              </ul>
          </div>
      </div>
  </nav>
</header>
<div class="container">
  <main role="main" class="pb-3">
      @RenderBody()
  </main>
</div>

<footer class="border-top footer text-muted">
  <div class="container">
      &copy; @DateTime.Now.Year ReportIt. All rights reserved.
  </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
