@model IEnumerable<ReportIt.Models.AuditLog>

@{
   ViewData["Title"] = "Audit Logs";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="container">
   <div class="table-responsive">
       <table class="table table-striped table-bordered">
           <thead class="thead-dark">
               <tr>
                   <th>@Html.DisplayNameFor(model => model.ActionDateTime)</th>
                   <th>@Html.DisplayNameFor(model => model.ActionType)</th>
                   <th>@Html.DisplayNameFor(model => model.CrimeEventID)</th>
                   <th>Actions</th>
               </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
               {
                   <tr>
                       <td>@Html.DisplayFor(modelItem => item.ActionDateTime)</td>
                       <td>@Html.DisplayFor(modelItem => item.ActionType)</td>
                       <td>@Html.DisplayFor(modelItem => item.CrimeEventID)</td>
                       <td>
                           <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                       </td>
                   </tr>
               }
           </tbody>
       </table>
   </div>
</div>
