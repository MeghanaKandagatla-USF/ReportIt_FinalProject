@model ReportIt.Models.CrimeEvent

@{
   ViewData["Title"] = "Delete";
}

<h1 class="text-danger">Delete Crime Event</h1>

<div class="alert alert-warning" role="alert">
   <h3>Are you sure you want to delete this record?</h3>
   <p>This action cannot be undone.</p>
</div>

<div class="card">
   <div class="card-header bg-danger text-white">
       <h4>Crime Event Details</h4>
   </div>
   <div class="card-body">
       <dl class="row">
           <dt class="col-sm-3">
               @Html.DisplayNameFor(model => model.CrimeDate)
           </dt>
           <dd class="col-sm-9">
               @Html.DisplayFor(model => model.CrimeDate)
           </dd>
           <dt class="col-sm-3">
               @Html.DisplayNameFor(model => model.LocationArea)
           </dt>
           <dd class="col-sm-9">
               @Html.DisplayFor(model => model.LocationArea)
           </dd>
           <dt class="col-sm-3">
               @Html.DisplayNameFor(model => model.LocationTown)
           </dt>
           <dd class="col-sm-9">
               @Html.DisplayFor(model => model.LocationTown)
           </dd>
           <dt class="col-sm-3">
               @Html.DisplayNameFor(model => model.VictimName)
           </dt>
           <dd class="col-sm-9">
               @Html.DisplayFor(model => model.VictimName)
           </dd>
           <dt class="col-sm-3">
               @Html.DisplayNameFor(model => model.CrimeType)
           </dt>
           <dd class="col-sm-9">
               @Html.DisplayFor(model => model.CrimeType)
           </dd>
           <dt class="col-sm-3">
               @Html.DisplayNameFor(model => model.Notes)
           </dt>
           <dd class="col-sm-9">
               @Html.DisplayFor(model => model.Notes)
           </dd>
       </dl>
   </div>
</div>

<form asp-action="Delete" onsubmit="return confirmDelete()">
   <input type="hidden" asp-for="Id" />
   <div class="mt-3">
       <button type="submit" class="btn btn-danger">Delete</button>
       <a asp-action="Index" class="btn btn-secondary">Back to List</a>
   </div>
</form>

@section Scripts {
   <script>
       function confirmDelete() {
           if (confirm("Are you sure you want to delete this record?")) {
               alert("Record deleted successfully.");
               return true;
           }
           return false;
       }
   </script>
}
