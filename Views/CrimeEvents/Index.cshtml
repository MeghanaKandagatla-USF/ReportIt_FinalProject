@model IEnumerable<ReportIt.Models.CrimeEvent>

@{
   ViewData["Title"] = "Crime Events";
}

<div class="container mt-4">
   <h1 class="text-center">@ViewData["Title"]</h1>

   <div class="d-flex justify-content-between align-items-center mb-3">
       <a class="btn btn-primary" asp-action="Create">Create New</a>
       <form class="form-inline" asp-controller="CrimeEvents" asp-action="Index">
           <div class="input-group">
               <input type="text" class="form-control" name="SearchString" placeholder="Search (area, town, victim name)" value="@TempData["SearchString"]" />
               <div class="input-group-append">
                   <button class="btn btn-outline-secondary" type="submit">Filter</button>
                   <a class="btn btn-outline-danger" href="/CrimeEvents">Clear</a>
               </div>
           </div>
       </form>
   </div>

   <table class="table table-striped table-hover">
       <thead class="thead-dark">
           <tr>
               <th>@Html.DisplayNameFor(model => model.CrimeDate)</th>
               <th>@Html.DisplayNameFor(model => model.LocationArea)</th>
               <th>@Html.DisplayNameFor(model => model.LocationTown)</th>
               <th>@Html.DisplayNameFor(model => model.VictimName)</th>
               <th>@Html.DisplayNameFor(model => model.CrimeType)</th>
               <th>@Html.DisplayNameFor(model => model.Notes)</th>
               <th>Actions</th>
           </tr>
       </thead>
       <tbody>
           @foreach (var item in Model)
           {
               <tr>
                   <td>@Html.DisplayFor(modelItem => item.CrimeDate)</td>
                   <td>@Html.DisplayFor(modelItem => item.LocationArea)</td>
                   <td>@Html.DisplayFor(modelItem => item.LocationTown)</td>
                   <td>@Html.DisplayFor(modelItem => item.VictimName)</td>
                   <td>@Html.DisplayFor(modelItem => item.CrimeType)</td>
                   <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                   <td>
                       <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                       <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                       <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                   </td>
               </tr>
           }
       </tbody>
   </table>
</div>
